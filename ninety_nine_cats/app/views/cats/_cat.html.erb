<% if action == :edit %>
  <% action_url = cat_url(cat) %>
  <% submit_value = "Change cat" %>
<% else %>
  <% action_url = cats_url %>
  <% submit_value = "Make new cat" %>
<% end %>

<form action="<%=action_url%>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label>
    Name: 
     <input type="text" name="cat[name]" value=" <%=cat.name%> ">
  </label>
  <br>
  <label>
    Sex:
    <br>
     <input type="radio" name="cat[sex]" value="M" <%="checked" if cat.sex == 'M'%>>Male
     <br>
     <input type="radio" name="cat[sex]" value="F" <%="checked" if cat.sex == 'F'%>>Female
  </label>
  <br>
  <label>
    Color:
    <select name="cat[color]">
      <option disabled selected>-- Select a Color --</option>
      <% Cat::COLORS.each do |color| %>
        <option value="<%=color%>" <%="selected" if cat.color == color%>><%=color%></option>
      <% end %>
      
    </select>
  </label>
  <br>
  <label>
    Birthday:
    <input type="date" name="cat[birth_date]" value="<%=cat.birth_date%>">
  </label>
  <br>
  <label>
    Description:
    <br>
    <textarea name="cat[description]" rows="4" cols="40"><%=cat.description%></textarea>
  </label>
  <br>
  <input type="submit" name="" value=<%=submit_value%>>
</form>